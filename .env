# Gmail SMTP Configuration
# 1. Enable 2-Step Verification in your Google Account
# 2. Generate an App Password at https://myaccount.google.com/apppasswords
# 3. Set these values below

GMAIL_ADDRESS=youremail
GMAIL_APP_PASSWORD=yourpassword

# Email Settings
FROM_NAME=websitename
REPLY_TO_EMAIL=youremail

# Features
ENABLE_EMAIL_CONFIRMATION=true
ENABLE_2FA=true
EMAIL_DEBUG=false
